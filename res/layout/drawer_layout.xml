<!--
    A DrawerLayout is indended to be used as the top-level content view
    using match_parent for both width and height to consume the full space available.
-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

   	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
         >
         <RelativeLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent" >
 
    		<fragment 
			    android:id="@+id/map"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    class="com.kosbrother.realestate.fragment.TransparentSupportMapFragment" />
    		
    		<LinearLayout 
		        android:id="@+id/linear_title"
		        android:layout_width="match_parent"
		        android:layout_height="36dp"
		        android:orientation="horizontal" 
		        android:background="#80000000"
		        android:padding="4dp" 
		        android:gravity="center_vertical"
		        >
		
		        <ImageView android:id="@+id/image_estate"
		            android:layout_width="25dp"
		        	android:layout_height="25dp"
		        	android:background="@drawable/marker_sale"
		        	android:layout_marginLeft="5dp"
		            />
		         <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="25dp"
		            android:text="買賣"
		            android:layout_marginLeft="5dp"
		            android:textColor="@color/white"
		            android:textSize="@dimen/dialog_text_size"
		             />
		         <ImageView android:id="@+id/image_estate"
		            android:layout_width="25dp"
		        	android:layout_height="25dp"
		        	android:background="@drawable/marker_rent"
		        	android:layout_marginLeft="5dp"
		            />
		         <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="25dp"
		            android:text="租賃"
		            android:layout_marginLeft="5dp"
		            android:textColor="@color/white"
		            android:textSize="@dimen/dialog_text_size"
		             />
		          <ImageView android:id="@+id/image_estate"
		            android:layout_width="25dp"
		        	android:layout_height="25dp"
		        	android:background="@drawable/marker_presell"
		        	android:layout_marginLeft="5dp"
		            />
		          <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="25dp"
		            android:text="預售"
		            android:layout_marginLeft="5dp"
		            android:textColor="@color/white"
		            android:textSize="@dimen/dialog_text_size"
		             />
		          
		          <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="25dp"
		            android:text="單位:萬元/坪"
		            android:gravity="right|center_vertical"
		            android:textColor="@color/white"
		            android:textSize="@dimen/dialog_small_text_size"
		             />
		          
		    </LinearLayout>
 			
    		<LinearLayout
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		   	android:layout_alignParentRight="true"
    		   	android:layout_below="@id/linear_title"
    		   	android:orientation="vertical"
    		   	android:layout_marginTop="10dp"
    		   	android:layout_marginRight="10dp"
    		     >
	    		<ImageButton android:id="@+id/image_btn_focus"
	    		    android:layout_width="42dp"
			        android:layout_height="42dp"
			        android:src="@drawable/icon_access_location_white"
			        android:background="@drawable/grid_selector"
			        android:padding="5dp"
			        android:scaleType="fitXY"
	    		    />
	    		<ImageButton android:id="@+id/image_btn_layers"
	    		    android:layout_width="42dp"
			        android:layout_height="42dp"
			        android:src="@drawable/icon_layers_white"
			        android:layout_marginTop="10dp"
			        android:background="@drawable/grid_selector"
			        android:padding="8dp"
			        android:scaleType="fitXY"
	    		    />
	    		<ImageButton android:id="@+id/image_btn_filter"
	    		    android:layout_width="42dp"
			        android:layout_height="42dp"
			        android:src="@drawable/icon_filter_white"
			        android:layout_marginTop="10dp"
			        android:background="@drawable/grid_selector"
			        android:padding="8dp"
			        android:scaleType="fitXY"
	    		    />
    		</LinearLayout>
    		
		</RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="270dp"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/left_list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#EBEBEB" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>