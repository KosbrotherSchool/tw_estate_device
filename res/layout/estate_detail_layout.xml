<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >
        
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        >
	        
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@color/gray_1"
                />
            
            <TextView android:id="@+id/text_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="臺北市文山區興隆路三段185巷7弄1~50號"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/detail_address_size"
                />
            
            <LinearLayout android:id="@+id/layout_trade"
                android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:layout_marginLeft="10dp"
	        	android:layout_marginRight="10dp"
                 >
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="交易資料"
                	android:textStyle="bold"
                	android:textSize="@dimen/detail_title_size"
                	android:layout_marginTop="2dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                	android:layout_height="1dp"
                	android:background="@color/line_gray"
                	android:layout_marginTop="2dp"
                	android:layout_marginBottom="2dp"
                     >
                </LinearLayout>
                <LinearLayout android:id="@+id/line_0"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="交易日期:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="102/07"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                <LinearLayout android:id="@+id/trade_line1"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			             >
				        <TextView 
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="標的:"
				       		android:textSize="@dimen/detail_text_size"
				            />
				        <TextView android:id="@+id/text_info_house_age"
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="房地(土地+建物)"
				       		android:textSize="@dimen/detail_text_size"
				            />
			        </LinearLayout>
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			             >
				        <TextView 
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="筆棟數:"
				       		android:textSize="@dimen/detail_text_size"
				            />
				        <TextView android:id="@+id/text_info_buy_date"
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="土地7建物1車位0"
				       		android:textSize="@dimen/detail_text_size"
				            />
				     </LinearLayout>
		        </LinearLayout>
		        <LinearLayout android:id="@+id/trade_line2"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			             >
				        <TextView 
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="移轉土地坪數："
				       		android:textSize="@dimen/detail_text_size"
				            />
				        <TextView android:id="@+id/text_info_house_age"
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="8.4坪"
				       		android:textSize="@dimen/detail_text_size"
				            />
			        </LinearLayout>
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			             >
				        <TextView 
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="移轉建物坪數："
				       		android:textSize="@dimen/detail_text_size"
				            />
				        <TextView android:id="@+id/text_info_buy_date"
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="24.3坪"
				       		android:textSize="@dimen/detail_text_size"
				            />
				     </LinearLayout>
		        </LinearLayout>
		        <LinearLayout android:id="@+id/line_3"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="單價:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="43萬/坪"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                 <LinearLayout android:id="@+id/line_4"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="總價:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="830萬"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>             
            </LinearLayout>
            
            <LinearLayout android:id="@+id/layout_ground"
                android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:layout_marginLeft="10dp"
	        	android:layout_marginRight="10dp"
                 >
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="土地資料"
                	android:textStyle="bold"
                	android:textSize="@dimen/detail_title_size"
                	android:layout_marginTop="2dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                	android:layout_height="1dp"
                	android:background="@color/line_gray"
                	android:layout_marginTop="2dp"
                	android:layout_marginBottom="2dp"
                    />    
                <LinearLayout android:id="@+id/line_0"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="區段位置:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="文山區"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                <LinearLayout android:id="@+id/line_1"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="土地使用區分:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="住"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>             
            </LinearLayout>
            
            <LinearLayout android:id="@+id/layout_building"
                android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:layout_marginLeft="10dp"
	        	android:layout_marginRight="10dp"
                 >
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="建物資料"
                	android:textStyle="bold"
                	android:textSize="@dimen/detail_title_size"
                	android:layout_marginTop="2dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                	android:layout_height="1dp"
                	android:background="@color/line_gray"
                	android:layout_marginTop="2dp"
                	android:layout_marginBottom="2dp"
                    />  
                <LinearLayout android:id="@+id/trade_line1"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			             >
				        <TextView 
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="建物日期："
				       		android:textSize="@dimen/detail_text_size"
				            />
				        <TextView android:id="@+id/text_info_house_age"
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="102/07/01"
				       		android:textSize="@dimen/detail_text_size"
				            />
			        </LinearLayout>
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			             >
				        <TextView 
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="主要用途："
				       		android:textSize="@dimen/detail_text_size"
				            />
				        <TextView android:id="@+id/text_info_buy_date"
				            android:layout_width="wrap_content"
				       		android:layout_height="wrap_content"
				       		android:text="住家用"
				       		android:textSize="@dimen/detail_text_size"
				            />
				     </LinearLayout>
		        </LinearLayout>
		        <LinearLayout android:id="@+id/line_3"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="建物形態:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="公寓(5樓含以下無電梯)"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                <LinearLayout android:id="@+id/line_3"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="主要建材:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="鋼筋混凝土造"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                <LinearLayout android:id="@+id/line_3"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="移轉層數:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="四層/ 5"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                <LinearLayout android:id="@+id/line_3"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="建物格局:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="3房2廳2衛浴"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                <LinearLayout android:id="@+id/line_3"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="管理組織:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="有"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                         
            </LinearLayout>
            
            <LinearLayout android:id="@+id/layout_parking"
                android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:layout_marginLeft="10dp"
	        	android:layout_marginRight="10dp"
                 >
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="車位資料"
                	android:textStyle="bold"
                	android:textSize="@dimen/detail_title_size"
                	android:layout_marginTop="2dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                	android:layout_height="1dp"
                	android:background="@color/line_gray"
                	android:layout_marginTop="2dp"
                	android:layout_marginBottom="2dp"
                    /> 
                <LinearLayout android:id="@+id/line_0"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="車位類別:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="坡道平面"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                <LinearLayout android:id="@+id/line_1"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="移轉坪數:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="9坪"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>
                <LinearLayout android:id="@+id/line_2"
		            android:layout_width="fill_parent"
		       		android:layout_height="wrap_content"
		       		android:orientation="horizontal"
		             >
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="車位總價:"
	                	android:textSize="@dimen/detail_text_size"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:text="0萬"
	                	android:textSize="@dimen/detail_text_size"
	                    />
                </LinearLayout>              
            </LinearLayout>
            
        
    	</LinearLayout>
        
        
    </ScrollView>
    
    

</LinearLayout>
